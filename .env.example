# Dev Ware Configuration
# Copy this file to .env and update with your settings

# Database Configuration (Choose one)

# Option 1: PostgreSQL (Recommended for production)
# DATABASE_URL=postgres://username:password@localhost/devware?sslmode=disable

# Option 2: SQLite (Simple setup for development)
DATABASE_URL=sqlite3://./devware.db

# Application Settings
APP_NAME=Dev Ware
DEBUG=true

# Security Settings (generate secure values for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Settings (for web API)
SERVER_PORT=8080
SERVER_HOST=localhost
